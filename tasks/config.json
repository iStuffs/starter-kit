{
    "ASSETS": {
        "src": "assets/**/*.{json,eot,otf,svg,ttf,woff,woff2}",
        "dest": "assets/"
    },
    "CSS": {
        "src": "assets/sass/**/*.{sass,scss}",
        "dest": "assets/css"
    },
    "DOC": {
        "sassDocOptions" : {
            "dest": "docs/sass/"
        }
    },
    "ERROR": "Error: <%= error.message %>",
    "HTML": {
        "entries": "pages/**/*.{html,hbs,handlebars}",
        "src": "/pages/**/*.{html,hbs,handlebars}",
        "dest": "",
        "paniniOptions": {
            "root": "/src/pages/",
            "layouts": "/src/layouts/",
            "partials": "/src/partials/",
            "helpers": "/src/helpers/",
            "data": "/src/data/"
        }
    },
    "IMAGES": {
        "src": "assets/images/**/*.{gif,jpg,jpeg,png,svg}",
        "dest": "assets/images"
    },
    "JS": {
        "entries": "assets/scripts/main.js",
        "src": "assets/scripts/**/*.js",
        "dest": "assets/scripts"
    },
    "PATH": {
        "src": "src/",
        "dest": "dist/"
    },
    "SERVER": {
        "port": 8000
    }
}
